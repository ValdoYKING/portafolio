---
// ProjectCard.astro
const { title, description, imgSrc, link } = Astro.props;
---

<div class="max-w-sm rounded-xl overflow-hidden shadow-lg border border-gray-200 dark:border-gray-700 m-2 transition-transform transform hover:scale-105 hover:shadow-2xl">
  <img class="w-full transition-transform transform hover:scale-110" src={imgSrc} alt={title} />
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">{title}</div>
    <p class="text-gray-700 dark:text-gray-400 text-base">
      {description}
    </p>
  </div>
  <div class="px-6 pt-4 pb-2">
    <!-- <button class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded" onclick={`document.getElementById('${title.replace(/\s+/g, '')}').classList.toggle('hidden')`}>
      Ver más
    </button> -->
    <a href={link} class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-4 rounded inline-block">
        Ver más
      </a>
    <!-- <div id={title.replace(/\s+/g, '')} class="hidden mt-2 transition-all duration-500 ease-in-out">
      {details}
    </div> -->
  </div>
