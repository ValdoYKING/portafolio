        </p>
        <!-- <img src={logoAccesio.src} alt="Project" class="icon" /> -->
      </div>
    </div>
  </div>
</div>

<style>
  /* Estilos para la línea de tiempo en zigzag */
  .timeline-container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    position: relative;
  }

  .timeline {
    position: relative;
    padding: 20px 0;
    display: flex;
    flex-direction: column;
  }

  .timeline-item {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    margin-bottom: 20px;
    position: relative;
  }

  .timeline-item.right {
    flex-direction: row-reverse;
  }

  .timeline-content {
    background: #4a5568; /* Fondo oscuro */
    color: white;
    padding: 15px 20px;
    border-radius: 8px;
    position: relative;
    width: 100%;
    max-width: 400px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease-in-out,
      background-color 0.3s ease-in-out;
    margin-left: 20px;
    margin-right: 20px;
  }

  .timeline-content:hover {
    transform: translateY(-10px);
  }

  .timeline-content h3 {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
    color: #ffd700; /* Color amarillo dorado */
  }

  .timeline-content span {
    font-size: 1rem;
    font-weight: bold;
    display: block;
    margin-bottom: 1rem;
    color: #f58300; /* Color naranja oscuro */
  }

  .icon {
    width: 40px;
    height: 40px;
    margin-top: 10px;
  }

  .timeline-item::before {
    content: "";
    position: absolute;
    top: 50%;
    width: 20px;
    height: 20px;
    background: #4a5568;
    border-radius: 50%;
    transform: translateY(-50%);
    z-index: 1;
  }

  .timeline-item.left::before {
    left: calc(100% - 20px);
  }

  .timeline-item.right::before {
    right: calc(100% - 20px);
  }

  .timeline-item::after {
    content: "";
    position: absolute;
    width: 3px;
    height: calc(100% + 20px);
    background: #4a5568;
    top: calc(50% + 10px);
    z-index: -1;
    left: 50%;
    transform: translateX(-50%);
    border-left: 2px dashed #4a5568;
  }

  .timeline-item:last-child::after {
    display: none;
  }

  /* Colores pastel */
  .pastel-green .timeline-content {
    background-color: #6ca79c; /* Verde oscuro menta */
  }

  .pastel-blue .timeline-content {
    background-color: #5b8b95; /* Azul oscuro desaturado */
  }
</style>
